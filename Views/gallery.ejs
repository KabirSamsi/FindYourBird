<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Find Your Bird</title>
    <link rel=stylesheet href="stylesheets/style.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

  </head>
  <body id="body">

    <%- include('partials/searchbar') %>

    <%if (birdInfo) {%>
      <div class="container mt-5" id="bird-container">
        <div class="row">
          <div class="col-12">
            <div class="jumbotron text-center" style="background-color: #6ba84a;">
              <h2><%=bird.name%> Gallery</h2>
              <a class="btn btn-warning" href="/<%=bird._id%>" id="edit" value="Edit">Back to Bird</a>
              <br /><br />


              <form action="/gallery/<%=bird._id%>?_method=put" method="post">

                <div class="input-group mb-3">
                  <input type="text" class="form-control" name="newImg" placeholder="Enter new image URL" aria-label="Recipient's username" aria-describedby="basic-addon2" style="border-color: black;">
                  <div class="input-group-append">
                    <button type="submit" class="btn btn-primary" style="border-color: black;">Add to Gallery</button>
                  </div>
                </div>

              </form>

              <br /><br />

              <%bird.gallery.forEach(img => { %>
                <div class="gallery-image-container" style="display: inline-block;">
                  <img style="margin-top: 5px; margin-right: 5px; margin-left: 5px; width: 30vw; height: 20vw; " src="<%=img%>" />
                  <br />

                  <% if (img != bird.img) { %>
                    <form action="/gallery/<%=bird._id%>?url=<%=img%>&_method=delete" method="post">
                      <button type="submit" class="btn btn-danger" style="margin: 5px; width: 30vw;" >Remove from Gallery</a>
                    </form>
                  <% } else { %>
                      <span class="btn btn-warning disabled" style="margin: 5px; width: 30vw;" >Image Cannot Be Removed</a>
                  <% }%>
                </div>
              <%})%>
            </div>
          </div>
        </div>
      </div>

    <% } else if (search){ %>
      <div class="container mt-5" id="bird-container">
        <div class="row">
          <div class="col-12">
            <div class="jumbotron text-center" style="background-color: #6ba84a;">
              <strong>No birds with name '<%=search%>' were found.</strong>
            </div>
          </div>
        </div>
      </div>

      <% } else { %>
        <div class="container mt-5" id="bird-container">
          <div class="row">
            <div class="col-12">
            </div>
          </div>
        </div>
      <% }%>

  </body>
</html>
