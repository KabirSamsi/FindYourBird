<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>FindYourBird</title>
    <link rel=stylesheet href="../stylesheets/style.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='shortcut icon' type='image/x-icon' href='/media/favicon3.ico' />

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>

  </head>
  <body id="body">

    <%- include('partials/searchbar') %>

    <%if (birdInfo) {%>
      <div class="container mt-5">
        <div class="row">
          <div class="col-12">
            <div class="jumbotron text-center" style="background-color: #6ba84a;">
              <h2><%=bird.name%> Gallery</h2>
              <a class="btn btn-warning" href="/<%=bird._id%>" id="edit" value="Edit"><i class="fas fa-arrow-left"></i> Back</a>
              <br /><br />

              <button type="button" id="add-new-button" class="btn btn-info"><i class="fas fa-plus-circle"></i> Add New Image To Gallery</button>
              <button type="button" id="stop-add-button" class="btn btn-danger"><i class="far fa-window-close"></i> Cancel Image</button><br /><br />

              <form id="add-new-form" action="/gallery/<%=bird._id%>?_method=put" method="post">

                <input required id="new-image-url" type="text" class="form-control" name="newImg" placeholder="Enter new image URL" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <br />
                <input required id="new-image-citation" maxlength="50" type="text" class="form-control" name="citation" placeholder="Enter image citation" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <br />

                <figure class="figure">
                  <img id="new-display-image" style="margin-top: 5px; margin-right: 5px; margin-left: 5px; width: 30vw; height: 20vw;" class="figure-img img-fluid rounded"><br />
                  <figcaption class="figure-caption" style="color:black;"><strong id="citation-header"></strong><em id="citation-value"></em></figcaption>
                </figure>
                <br />

                <button type="submit" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Submit Image</button>

              </form>

              <br />

              <% for (let i = 0; i < bird.gallery.length; i += 1) { %>

                <div class="gallery-image-container" style="display: inline-block;">

                  <figure class="figure">
                    <img style="margin-top: 5px; margin-right: 5px; margin-left: 5px; width: 30vw; height: 20vw; " src="<%=bird.gallery[i][0]%>" class="figure-img img-fluid rounded" alt="<%=bird.name%> photo">
                    <figcaption class="figure-caption" style="color:black;"><strong>Citation</strong>: <em><%=bird.gallery[i][1]%></em></figcaption>
                  </figure>

                  <br />

                  <% if (i != 0) { %>
                    <form action="/gallery/<%=bird._id%>?index=<%=i%>&_method=delete" method="post">
                      <button type="submit" class="btn btn-danger" style="margin: 5px; width: 30vw;"><i class="fas fa-trash"></i> Remove from Gallery</a>
                    </form>
                  <% } else { %>
                      <span class="btn btn-warning disabled" style="margin: 5px; width: 30vw;"><i class="fas fa-exclamation-triangle"></i> Original Image Cannot Be Removed</a>
                  <% }%>
                </div>
              <%}%>
            </div>
          </div>
        </div>
      </div>

    <% } else if (search){ %>
      <div class="container mt-5" id="bird-container">
        <div class="row">
          <div class="col-12">
            <div class="jumbotron text-center" style="background-color: #6ba84a;">
              <strong>No birds with name '<%=search%>' were found.</strong>
            </div>
          </div>
        </div>
      </div>

      <% } else { %>
        <div class="container mt-5" id="bird-container">
          <div class="row">
            <div class="col-12">
            </div>
          </div>
        </div>
      <% }%>

  </body>

  <script>

  const newImgButton = document.getElementById('add-new-button')
  const stopAddButton = document.getElementById('stop-add-button')
  const newDisplayImage = document.getElementById('new-display-image')
  const newImgInput = document.getElementById('new-image-url')
  const newImgCitation = document.getElementById('new-image-citation')
  const citationHeader = document.getElementById('citation-header')
  const citationValue = document.getElementById('citation-value')

  $('#add-new-form').hide()
  $('#stop-add-button').hide()

  newImgButton.addEventListener('click', () => {
    $('#add-new-form').show()
    $('#stop-add-button').show()
    $('#new-display-image').hide()
    $('#add-new-button').hide()
  })

  stopAddButton.addEventListener('click', () => {
    newImgInput.value = ""
    newImgCitation.value = ""
    citationHeader.innerText = ""
    citationValue.innerText = ""
    $('#add-new-form').hide()
    $('#stop-add-button').hide()
    $('#add-new-button').show()
  })

  newImgInput.addEventListener('keydown', () => {
    setTimeout(() => {
      if(newImgInput.value.slice(0, 8) == "https://" || newImgInput.value.slice(0, 7) == "http://") {
        newDisplayImage.src = newImgInput.value
        newDisplayImage.alt = "Image Does Not Exist"

      } else {
        newDisplayImage.src = ""
        newDisplayImage.alt = "Image Does Not Exist"
      }

      $('#new-display-image').show()
    }, 3)
  })

  newImgCitation.addEventListener('keydown', () => {
    setTimeout(() => {

      if (newImgCitation.value != "") {
        citationHeader.innerText = "Citation: "
        citationValue.innerText = newImgCitation.value

      } else {
        citationHeader.innerText = ""
        citationValue.innerText = newImgCitation.value
      }

    }, 3)
  })







  </script>
</html>
