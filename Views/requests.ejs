<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>FindYourBird</title>
    <link rel=stylesheet href="../stylesheets/style.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='shortcut icon' type='image/x-icon' href='/media/favicon3.ico' />

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>

  </head>
  <body id="body">

    <%- include('partials/searchbar') %>

    <div class="container mt-5" id="bird-container">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center" style="background-color: #6ba84a;">

            <% if (action == "new") { %>
              <h2>New Add Requests</h2>

              <% if (requests.length > 0) { %>

                <%requests.forEach(request => { %>
                  <li>
                    <a href="/request/newBirdShow/<%=request._id%>" style="color: black;"><%=request.name%></a>
                  </li>
                <%})%>

              <% } else { %>
                <p>No New Requests</p>
              <% } %>

            <% } else if (action == "update") { %>
              <h2>New Update Requests</h2>

              <% if (requests.length > 0) { %>

                <%requests.forEach(request => { %>
                  <li>
                    <a href="/request/updateBirdShow/<%=request._id%>" style="color: black;"><%=request.bird.name%></a>
                  </li>
                <%})%>

              <% } else { %>
                <p>No New Requests</p>
              <% } %>

            <% } else if (action == "galleryUpdate"){ %>
              <h2>New Gallery Update Requests</h2>

              <% if (requests.length > 0) { %>

                <%requests.forEach(request => { %>
                  <li>
                    <a href="/request/galleryUpdateShow/<%=request._id%>" style="color: black;"><%=request.bird.name%> (<%=request.action%>)</a>
                  </li>
                <%})%>

              <% } else { %>
                <p>No New Requests</p>
              <% } %>

            <% } %>

          </div>
        </div>
      </div>
    </div>

  </body>
</html>
