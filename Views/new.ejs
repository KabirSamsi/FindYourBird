<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>FindYourBird</title>
    <link rel=stylesheet href="stylesheets/style.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='shortcut icon' type='image/x-icon' href='/media/favicon3.ico' />

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
  </head>
  <body id="body">

    <%- include('partials/searchbar') %>

    <div class="container mt-5" id="bird-container">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center" >

            <h2>Bird Info</h2>
            <form action="/" method="post">
              <br />
              <input class="form-control" minlength="4" maxlength="35" class="inpt" type="text" id="name" name="name" placeholder="Enter bird name" required/><br />
              <input class="form-control" class="inpt" type="text" placeholder="Enter url for bird image" id="img" name="img" required/><br />
              <input class="form-control" maxlength="50" class="inpt" type="text" placeholder="Enter citation for bird image" id="cit" name="citation" required/><br />
              <input class="form-control" maxlength="70" class="inpt" type='text' id="range" placeholder='Enter bird range' name="range" required/><br />
              <input class="form-control" maxlength="100" class="inpt" type='text' id="app" placeholder='Enter bird appearance' name="appearance" required/><br />
              <input class="form-control" maxlength="60" class="inpt" type='text' id="diet" placeholder='Enter bird diet, separated by commas' name="diet" required/><br />
              <textarea maxlength="330" class="form-control" class="inpt" id="description" rows='5' cols='25' type='text' placeholder='Enter bird description' name="description" required></textarea>

              <br />

              <h4>Colors</h4>
              <% for (let color of colors) { %>
                <input style="background: <%=color%>;" type="checkbox" name="<%=color%>" />
                <% if (['White', 'Yellow', 'Pink', 'Orange'].includes(color)) { %>
                  <label style="background-color: <%=color%>; color: black; padding-left: 10px; padding-right: 10px; border-radius: 20px;"><%=color%></label><br />
                <% } else {%>
                  <label style="background-color: <%=color%>; color: white; padding-left: 10px; padding-right: 10px; border-radius: 20px;"><%=color%></label><br />
                <% } %>
              <% } %>

              <br />
              <h4>Size</h4>
              <select required class="form-control" id="size-list" name="size">
                <option disabled selected value="">Select A Bird Size</option>
                <% for (let size of sizes) {%>
                  <option name="size"><%=size%></option>
                <%}%>
              </select>

              <br />
              <h4 id="habitat-list-head">Habitat</h4>
                <% for (let hab of habitats) {%>
                  <input type="checkbox" name="<%=hab%>" />
                  <label for=<%=habitats.indexOf(hab)%> class="label"><%=hab%></label>
                  <br />
                <%}%>

              <br />
              <button class="btn btn-primary" type="submit" id='submt' name="button"><i class="fas fa-plus-circle"></i> Submit Bird</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
