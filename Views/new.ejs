<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>FindYourBird</title>
    <link rel=stylesheet href="stylesheets/style.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>
  <body id="body">

    <%- include('partials/searchbar') %>

    <div class="container mt-5" id="bird-container">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center" >

            <h2>Bird Info</h2>
            <form action="/" method="post">
              <br />
              <input class="form-control" minlength="4" maxlength="35" class="inpt" type="text" id="name" name="name" placeholder="Enter bird name" /><br />
              <input class="form-control" class="inpt" type="text" placeholder="Enter url for bird image" id="img" name="img" /><br />
              <input class="form-control" maxlength="70" class="inpt" type='text' id="range" placeholder='Enter bird range' name="range" /><br />
              <input class="form-control" maxlength="100" class="inpt" type='text' id="app" placeholder='Enter bird appearance' name="appearance" /><br />
              <input class="form-control" maxlength="60" class="inpt" type='text' id="diet" placeholder='Enter bird diet, separated by commas' name="diet" /><br />
              <textarea maxlength="330" class="form-control" class="inpt" id="description" rows='5' cols='25' type='text' placeholder='Enter bird description' name="description")></textarea>

              <br />

              <h4>Colors</h4>
              <% for (let color of colors) { %>
                <input style="background: <%=color%>;" type="checkbox" name="<%=color%>" />
                <% if (['White', 'Yellow', 'Pink', 'Orange'].includes(color)) { %>
                  <label style="background-color: <%=color%>; color: black; padding-left: 10px; padding-right: 10px; border-radius: 20px;"><%=color%></label><br />
                <% } else {%>
                  <label style="background-color: <%=color%>; color: white; padding-left: 10px; padding-right: 10px; border-radius: 20px;"><%=color%></label><br />
                <% } %>
              <% } %>

              <br />
              <h4>Size</h4>
              <select required class="form-control" id="size-list" name="size">
                <option disabled selected value="">Select A Bird Size</option>
                <% for (let size of sizes) {%>
                  <option name="size"><%=size%></option>
                <%}%>
              </select>

              <br />
              <h4 id="habitat-list-head">Habitat</h4>
                <% for (let hab of habitats) {%>
                  <input type="checkbox" name="<%=hab%>" />
                  <label for=<%=habitats.indexOf(hab)%> class="label"><%=hab%></label>
                  <br />
                <%}%>

              <br />
              <button class="btn btn-primary" type="submit" id='submt' name="button">Submit Bird</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
